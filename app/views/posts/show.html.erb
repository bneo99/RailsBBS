<div class="container">
<h1><strong><%= @post.title %></strong></h1>
 
<p><%= simple_format @post.body %></p>
<% if @post.image.attached? %>
  <image src="<%=(url_for(@post.image))%>" class="img-fluid">
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %>
<p><%= link_to 'Back', posts_path %></p>
</div>
