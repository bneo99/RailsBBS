<div class="container my-3">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", :class => "form-control my-2" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "current-password", :placeholder => "Password", :class => "form-control my-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, :class => "form-check-input" %>
      <%= f.label :remember_me, :class => "form-check-label" %>
    </div>
  <% end %>

    <%= f.submit "Log in", :class => "btn bg-primary btn-outline-light" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
