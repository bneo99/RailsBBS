<% content_for :title do %>
  <title>Edit User | RailsBBS</title>
<% end %>

<div class="container my-3">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: users_all_edit_path(resource.id), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label "First Name" %><br />
    <%= f.text_field :fname, autofocus: true, autocomplete: "first-name", :class => "form-control my-2" %>
  </div>

  <div class="form-group">
    <%= f.label "Last Name" %><br />
    <%= f.text_field :lname, autocomplete: "last-name", :class => "form-control my-2" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class:"form-control my-2", disabled: "disabled" %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control my-2" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control my-2" %>
  </div>

  <%= f.submit "Update", :class => "btn bg-primary btn-outline-light" %>

<% end %>

</div>
<div class="container my-3">
  <h2>Remove account</h2>

  <p><%= button_to 'Remove this account', users_all_path(@user),
         method: :delete,
         data: { confirm: 'Are you sure?' } , 
         class: "btn bg-primary btn-outline-light" %></p>

</div>
