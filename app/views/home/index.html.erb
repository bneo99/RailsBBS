<% content_for :title do %>
  <title>Home | RailsBBS</title>
<% end %>

<div class="container my-3">
  <% @posts.each do |post| %>
    <div class="card mb-3 border-dark">
      <% if post.image.attached? %>
        <image src="<%=(url_for(post.image))%>" class="card-img-top">
      <% end %>
      <div class="card-body">
        <h3 class="card-title"><%= post.title %></h3>
        <%= simple_format post.body, :class => "card-text"%>
        <br/>
        <p class="card-text small"><em>Updated at: <%= post.updated_at %> by 
          <% if @users[post.user_id].blank? %>
            removed
          <% else %>
            <%= @users[post.user_id] %>
          <% end %></em></p>
      </div>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>
